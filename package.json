{
  "name": "polaris",
  "version": "0.3.1",
  "description": "Ainara Polaris - Ainara AI Companion Framework Desktop Integration",
  "main": "polaris/main.js",
  "author": {
    "name": "Rubén Gómez",
    "email": "rgomez@khromalabs.org",
    "url": "https://khromalabs.org"
  },
  "license": "LGPL-3.0-or-later",
  "repository": "github:khromalabs/ainara",
  "bugs": "https://github.com/khromalabs/ainara/issues",
  "dependencies": {
    "@ricky0123/vad-web": "^0.0.22",
    "electron-updater": "^6.1.7",
    "eventsource-client": "^1.1.3",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "iohook": "^0.9.3",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.7.0",
    "semver": "^7.6.0",
    "web-audio-api": "^0.2.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eove/eslint-config-electron": "^2.0.1",
    "@eslint/js": "^9.20.0",
    "electron": "^34.0.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-formatter-compact": "^8.40.0",
    "globals": "^16.0.0"
  },
  "iohook": {
    "targets": [
      "node-88",
      "electron-106"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64"
    ]
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build",
    "build:win": "electron-builder build --win --publish onTag",
    "build:mac": "electron-builder build --mac --publish onTag",
    "build:linux": "electron-builder build --linux --publish onTag"
  },
  "build": {
    "appId": "app.ainara.polaris",
    "publish": [
      {
        "provider": "github",
        "owner": "khromalabs",
        "repo": "ainara"
      }
    ],
    "productName": "Ainara Polaris",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "polaris/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [ "x64", "arm64" ]
        }
      ],
      "x64ArchFiles": "Contents/Resources/bin/servers/_internal/**/*.dylib",
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "extraResources": [
        {
          "from": "dist/servers",
          "to": "bin/servers",
          "filter": [
            "**/*",
            "!**/_internal/resources/bin/windows/**",
            "!**/_internal/resources/bin/linux/**"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "extraResources": [
        {
          "from": "dist/servers",
          "to": "bin/servers",
          "filter": [
            "**/*",
            "!**/_internal/resources/bin/macos/**",
            "!**/_internal/resources/bin/linux/**"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "polaris/assets/icon.png",
      "category": "Utility",
      "extraResources": [
        {
          "from": "dist/servers",
          "to": "bin/servers",
          "filter": [
            "**/*",
            "!**/_internal/resources/bin/windows/**",
            "!**/_internal/resources/bin/macos/**"
          ]
        }
      ]
    }
  }
}
